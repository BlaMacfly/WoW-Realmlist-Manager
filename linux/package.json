{
  "name": "wow-realmlist-manager",
  "version": "1.1.0",
  "description": "A World of Warcraft 3.3.5 realmlist manager for Linux",
  "main": "main.js",
  "homepage": "https://github.com/BlaMacfly/WoW-Realmlist-Manager",
  "scripts": {
    "start": "electron main.js",
    "dist": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.wowrealmlistmanager.app",
    "productName": "WoW Realmlist Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "assets/**/*",
      "index.html",
      "realmlists.json",
      "create-icon.js",
      "!**/node_modules/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game",
      "icon": "assets/new-icon.png",
      "maintainer": "BlaMacfly <blamacfly@gmail.com>"
    }
  },
  "author": {
    "name": "BlaMacfly",
    "email": "blamacfly@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.9.1"
  }
}
