{
  "name": "wow-realmlist-manager-linux",
  "version": "1.0.0",
  "description": "A World of Warcraft 3.3.5 realmlist manager for Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --linux --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BlaMacfly/WoW-Realmlist-Manager.git"
  },
  "build": {
    "appId": "com.wowrealmlist.app.linux",
    "productName": "WoW Realmlist Manager Linux",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Game",
      "icon": "assets/icon.png",
      "maintainer": "BlaMacfly",
      "vendor": "BlaMacfly",
      "synopsis": "World of Warcraft Realmlist Manager for Linux",
      "description": "A tool to manage World of Warcraft realmlists on Linux systems"
    },
    "deb": {
      "depends": [
        "wine",
        "winetricks"
      ]
    },
    "rpm": {
      "depends": [
        "wine",
        "winetricks"
      ]
    }
  },
  "author": "BlaMacfly",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
